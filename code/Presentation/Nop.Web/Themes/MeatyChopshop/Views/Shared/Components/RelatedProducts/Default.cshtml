@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col">
            <h2>@T("Products.RelatedProducts")</h2>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="@(Model.Count == 5 ? "col" : "col-2")">@await Html.PartialAsync("_ProductBox", item)</div>
        }
    </div>
}